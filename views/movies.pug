extends layout

block content
  p Movies
  ul
    each m in movies
      li(onclick=`getMovieData(${m.Id})`) #{m.Title}
        if user && user.Role == 'cinemaAdmin'
            button.btn.btn-primary(onclick=`addMovieToCinema(${m.Id})`) Add movie
      br

script(type='text/javascript').
  function getMovieData(id) {
    $(location).attr('href',`/movies/${id}`);
  };

  function addMovieToCinema(id) {
    $(location).attr('href', `/cinemas/addMovie/${id}`);
  }
