extends layout

block content
  .row
    .panel-body
      .col-md-6.col-md-offset-3
        form(method='POST' action=`/projections/${projection.Id}/edit`)
          .row
            .col-md-12.lead
              | Projection #{projection.Id} Settings
              hr
          .row
            .col-md-12
              .form-group
                label Movie Id
                input.form-control(type='number' placeholder=`${projection.MovieId}` name='movieId')
              .form-group
                label Hall Id
                input.form-control(type='number' placeholder=`${projection.HallId}` name='hallId')
              .form-group
                label Start Time
                input.form-control(type='text' placeholder=`${projection.StartTime}` name='startTime')
          .row
            .col-md-12
              hr
              button.btn.btn-primary.pull-right(type='submit')
                i.glyphicon.glyphicon-floppy-disk
                |  Save