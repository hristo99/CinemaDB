doctype html
html
  head
    title= 'CinemaDB'
    link(rel='stylesheet' href='https://maxcdn.bootstrapcdn.com/bootstrap/3.3.7/css/bootstrap.min.css')
    link(rel='stylesheet' href='/stylesheets/style.css')
    link(rel="stylesheet" href="https://ajax.googleapis.com/ajax/libs/jqueryui/1.12.1/themes/smoothness/jquery-ui.css")
    link(rel="stylesheet" href="/stylesheets/jquery.datetimepicker.min.css")
  body
    nav.navbar.navbar-inverse
      .container-fluid
        .navbar-header
          button.navbar-toggle.collapsed(type='button', data-toggle='collapse', data-target='#bs-example-navbar-collapse-1', aria-expanded='false')
            span.sr-only Toggle navigation
            span.icon-bar
            span.icon-bar
            span.icon-bar
          a.navbar-brand(href='/') CinemaDB
        #bs-example-navbar-collapse-1.collapse.navbar-collapse
          ul.nav.navbar-nav
            if user
              li.active
                a(href='/boughtTickets')
                  | Bought Tickets
                  span.sr-only (current)
              if user.Role == 'admin'
                li
                  a(href='/movies/add') Add movie
            li
              a(href='/movies/hottest') Hottest Movies
          form.navbar-form.navbar-left
            .form-group
              input.form-control(type='text', placeholder='Search')
            button.btn.btn-default(type='submit') Submit
          ul.nav.navbar-nav.navbar-right
            if !user
              li
                a(href='/login') Log in
              li
                a(href='/signup') Sign up
            if user
              li.dropdown
                a.dropdown-toggle(data-toggle='dropdown', role='button', aria-haspopup='true', aria-expanded='false')
                  | #{user.FirstName} #{user.LastName}
                  span.caret
                ul.dropdown-menu
                  li
                    a(href='/profile') View profile
                  li
                    a(href='/profile/settings') Profile settings
                  li.divider(role='separator')
                  li
                    a(href='/logout') Log out
    .container
      block content
    script(src='http://ajax.googleapis.com/ajax/libs/jquery/2.0.3/jquery.min.js')
    script(src='https://maxcdn.bootstrapcdn.com/bootstrap/3.3.7/js/bootstrap.min.js')
    script(src='https://ajax.googleapis.com/ajax/libs/jqueryui/1.12.1/jquery-ui.min.js')
    script(src='/javascripts/jquery.datetimepicker.full.min.js')
    script(type='text/javascript').
      $('#datetimepicker').datetimepicker({
        format: 'Y-m-d H:i'
      });